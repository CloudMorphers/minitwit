@model MiniTwit.Models.Auth.LoginViewModel

<h2>Sign In</h2>

@await Html.PartialAsync("_Notification")

<form method="post">
    <dl>
        <dt>Username:</dt>
        <dd><input type="text" asp-for="Username" /></dd>
        <dt>Password:</dt>
        <dd><input type="password" asp-for="Password" /></dd>
    </dl>
    <div><input type="submit" value="Sign In"></div>
</form>
